import sqlite3
import pandas as pd

# Nombre de la base de datos
DATABASE_NAME = "fit.db"

# Función para exportar una tabla a CSV
def export_table_to_csv(table_name, csv_filename):
    # Conectar a la base de datos
    conn = sqlite3.connect(DATABASE_NAME)
    
    # Leer la tabla en un DataFrame de pandas
    df = pd.read_sql_query(f"SELECT * FROM {table_name}", conn)
    
    # Exportar el DataFrame a un archivo CSV
    df.to_csv(csv_filename, index=False)
    
    # Cerrar la conexión
    conn.close()

# Exportar la tabla fit_gym a un archivo CSV
export_table_to_csv('fit_gym', 'fit_gym.csv')

# Exportar la tabla fit_run a un archivo CSV
export_table_to_csv('fit_run', 'fit_run.csv')

